@model GastosPersonales.Models.Models.Categoria
@{
    ViewData["Title"] = "CrearCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>CrearCategoria</h1>

<form action="CrearCategoria" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row ">
        <div class="col-6 offset-3 border p-5">
            <div class="row">
                <div class="col-4">
                    <label asp-for="@Model.NombreCategoria" class="form-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="@Model.NombreCategoria" class="form-control" />
                    <span asp-validation-for="@Model.NombreCategoria" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col d-flex justify-content-end">
                    <button type="submit" class="btn btn-success">Crear </button>
                </div>
            </div>
        </div>
    </div>
</form>